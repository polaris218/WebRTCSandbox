.buttonLight
    display inline-block
    display inline-flex
    flex-direction column
    justify-content center
    align-items center
    height 40px
    border-radius 6px
    border 0
    outline 0
    padding 0 46px
    background-color #3c4544
    color #8eabab
    font-family 'Circe', sans-serif
    font-size 14px
    font-weight 700
    text-transform uppercase
    padding-top 2px
    text-decoration none
    transition all .3s
    max-width 112px
    &:hover
        background-color #485554
        color #ffffff
    &:active
        box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.35)

