.modalTitle
    position relative
    min-height 77px
    box hortizontal middle space-between
    padding 15px 30px
    border-bottom 1px solid rgba(0,0,0,.1)
    z-index 320
.modalHeader
    box horizontal middle left
    flex-wrap wrap
    padding-right 40px
    h6
        color #8eabab
        font-family 'Circe', sans-serif
        font-size 30px
        font-weight 400
        margin-right 13px
.modalHeaderCenter
    box horizontal middle center
    flex 1 1 auto
    padding-left 20px
    padding-right 0
.modalHeaderTag
    margin-right 13px
    box vertical middle center
    height 28px
    border-radius 6px
    background-color #282a2a
    padding 2px 10px 0
    color #435050
    font-family 'Circe', sans-serif
    font-size 16px
    font-weight 700
    text-transform uppercase
    padding-top 2px
.modalClose
    box vertical middle center
.modalCloseButton
    display block
    size 20px
    border 0
    outline 0
    background-color transparent
    background-image url('../img/modal/close.png')
    transition all .4s
    &:hover
        background-image url('../img/modal/close-hover.png')