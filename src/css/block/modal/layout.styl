.modal
    left center
    top center
    z-index 300
    opacity 0
    visibility hidden
    transition all .3s
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    border-radius 3px
    background-color #2d2f2f
    width 480px

.modalIsShow
    opacity 1
    visibility visible

.modalWide
    width 768px

.modalMiddle
    box horizontal middle left
    position relative
    border-top 1px solid rgba(255,255,255,.02)
    border-bottom 1px solid rgba(0,0,0,.1)
.modalMiddleScroll
    box horizontal top space-between
    max-height 200px
    overflow hidden
    border-top 0
    border-bottom 0
    &:before
        display block
        position absolute
        top 0px
        left 0
        content ''
        width 100%
        height 14px
        background-image linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0) 100%)
        z-index 310
    &:after
        display block
        position absolute
        bottom 0
        left 0
        content ''
        width 100%
        height 14px
        background-image linear-gradient(to top, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0) 100%)
        z-index 310
.modalMiddleScrollLarge
    max-height 70vh
.modalScrollRail
    position relative
    flex 1 1 14px
    width 14px
    min-width 14px
    align-self stretch
    border-left 1px solid rgba(255,255,255,.02)
    border-right 1px solid rgba(0,0,0,.1)
.modalScrollBar
    position absolute
    left 2px
    top 30px
    width 8px
    height 100px
    border-radius 4px
    background-color #353939