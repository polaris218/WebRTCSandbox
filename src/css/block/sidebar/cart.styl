.cart
    display block

.cartOffer
    padding 12px 12px 12px
    border-bottom 1px solid rgba(0,0,0,.1)
.cartOfferSlider
    box horizontal middle space-between

.cartOfferSliderLeft
    display block
    size 15px
    background-repeat no-repeat
    background-position center center
    background-image url('../img/cart/arrow-left.png')
    transition all .4s
    margin-right 10px
    &:hover
        background-image url('../img/cart/arrow-left-hover.png')

.cartOfferSliderRight
    display block
    size 15px
    background-repeat no-repeat
    background-position center center
    background-image url('../img/cart/arrow-right.png')
    transition all .4s
    margin-left 10px
    &:hover
        background-image url('../img/cart/arrow-right-hover.png')

.cartOfferSliderSlideWrap
    flex 1 1 auto
    height 26px
    border-radius 6px
    background-color #282a2a
    box horizontal middle center
.cartOfferSliderSlide
    font-family 'Circe', sans-serif
    font-weight 400
    color #505c5b
    font-size 13px
    span
        margin-left 4px
        color #8eabab
        font-size 12px
        text-transform uppercase

.cartTotals
    border-top 1px solid rgba(255,255,255,.02)
    box vertical top left
    margin-bottom 20px
    padding 18px 21px

.cartTotalSubtotal
    width 100%
    box horizontal middle space-between
    padding-right 31px
    &Title
        color #546161
        font-family 'Circe', sans-serif
        font-size 14px
        font-weight 400
    &Value
        display inline-block
        position relative
        color #505c5b
        font-family 'Circe', sans-serif
        font-size 13px
        font-weight 700
        font-size 11px
        span
            font-weight 400
        &:after
            display block
            position absolute
            content ''
            size calc(100% + 4px) 1px
            top calc(50% - 1px)
            left -2px
            background-color rgba(115, 134, 134, 0.7)

.cartTotal
    width 100%
    box horizontal middle space-between
    padding-right 31px
    &Title
        color #546161
        font-family 'Circe', sans-serif
        font-size 14px
        font-weight 400
    &Value
        color #ffffff
        font-family 'Circe', sans-serif
        font-size 18px
        font-weight 700
        font-size 16px
        font-weight 400

.cartButtonAdd
    padding 0 22px 20px
.cartButton
    width 100%
    height 41px
    border-radius 3px
    background-color #3c4544
    border 0
    outline 0
    color #9bb8b8
    font-family 'Circe', sans-serif
    font-size 11px
    font-weight 400
    text-transform uppercase
    padding 0 32px 0 65px
    text-align center
    white-space nowrap
    background-image url('../img/cart/cart.png')
    background-repeat no-repeat
    background-position left 28px center
    transition all .4s
    &:hover
        color #fff
        background-color #44504f
        background-image url('../img/cart/cart-hover.png')
    &:active
        box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.35)